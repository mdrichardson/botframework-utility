{
	"name": "botframework-utility",
	"displayName": "BotFramework Utility",
	"description": "Helper utilities to assist in a more efficient bot development life cycle",
	"repository": {
		"type": "git",
		"url": "https://github.com/mdrichardson/botframework-utility"
	},
	"publisher": "mdrichardson",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/*.bot",
		"workspaceContains:**/appsettings.json",
		"workspaceContains:**/.env"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "botframework-utility.openEmulatorLocalhost",
				"category": "Bot > Emulator",
				"title": "Open Emulator (localhost)"
			},
			{
				"command": "botframework-utility.createAppRegistration",
				"category": "Bot > Deploy",
				"title": "1. Create App Registration"
			},
			{
				"command": "botframework-utility.deploymentCreateResourcesNewResourceGroup",
				"category": "Bot > Deploy",
				"title": "2A. Create AZ Resources (new Res. Group)"
			},
			{
				"command": "botframework-utility.deploymentCreateResourcesExistingResourceGroupExistingServicePlan",
				"category": "Bot > Deploy",
				"title": "2B. Create AZ Resources (existing Res. Group/existing Service Plan)"
			},
			{
				"command": "botframework-utility.deploymentCreateResourcesExistingResourceGroupNewServicePlan",
				"category": "Bot > Deploy",
				"title": "2C. Create AZ Resources (existing Res. Group/new Service Plan)"
			},
			{
				"command": "botframework-utility.deploymentPublish",
				"category": "Bot > Deploy",
				"title": "3. Deploy/Publish"
			},
			{
				"command": "botframework-utility.updateCliTools",
				"category": "Bot > CLI Tools",
				"title": "Update All"
			},
			{
				"command": "botframework-utility.getSample",
				"category": "Bot > Samples",
				"title": "Get/Download Sample"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceFilename =~ /(.env|appsettings.json)/i",
					"command": "botframework-utility.openEmulatorLocalhost",
					"group": "@botframework-utility"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Botframework Utility",
			"properties": {
				"botframework-utility.customTerminal": {
					"type": "string",
					"default": "",
					"description": "Path to custom terminal for commands"
				},
				"botframework-utility.excludeCliToolsFromUpdate": {
					"type": "array",
					"uniqueItems": true,
					"items": [
						{
							"type": "string",
							"enum": [
								"az",
								"botdispatch",
								"botskills",
								"chatdown",
								"dialoglint",
								"dialogschema",
								"dialogtracker",
								"ludown",
								"luis-apis",
								"luisgen",
								"msbot",
								"qnamaker"
							]
						}
					],
					"examples": [
						[
							"az",
							"botdispatch",
							"botskills",
							"chatdown",
							"dialoglint",
							"dialogschema",
							"dialogtracker",
							"ludown",
							"luis-apis",
							"luisgen",
							"msbot",
							"qnamaker"
						]
					],
					"default": [
						"dialogtracker",
						"dialogschema",
						"dialoglint",
						"msbot"
					],
					"description": "Select which tools to exclude when updating all tools"
				}
			}
		},
		"keybindings": [
			{
				"command": "botframework-utility.openEmulatorLocalhost",
				"key": "ctrl+alt+shift+e",
				"mac": "cmd+alt+shift+e",
				"when": "debugType != xyz"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "webpack --mode none",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test",
		"test-compile": "tsc --sourceMap -p ./ && npm run compile",
		"lint": "eslint ./src --ext .ts",
		"package": "vsce package",
		"watch": "npm run test-compile && tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/archiver": "^3.0.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^2.2.48",
		"@types/node": "^10.14.7",
		"@types/sinon": "^7.0.11",
		"@typescript-eslint/eslint-plugin": "^1.7.0",
		"@typescript-eslint/parser": "^1.7.0",
		"decache": "^4.5.1",
		"eslint": "^5.16.0",
		"eslint-config-standard": "^12.0.0",
		"eslint-plugin-import": "^2.17.2",
		"eslint-plugin-node": "^8.0.1",
		"eslint-plugin-promise": "^4.1.1",
		"eslint-plugin-standard": "^4.0.0",
		"glob": "^7.1.4",
		"istanbul": "^0.4.5",
		"mocha": "^6.1.4",
		"randexp": "^0.5.3",
		"remap-istanbul": "^0.13.0",
		"sinon": "^7.3.2",
		"ts-loader": "^5.4.4",
		"tslint": "^5.16.0",
		"typescript": "^3.4.5",
		"vscode": "^1.1.34",
		"webpack": "^4.30.0",
		"webpack-cli": "^3.3.2"
	},
	"dependencies": {
		"@types/semver": "^6.0.0",
		"archiver": "^3.0.0",
		"axios": "^0.18.0",
		"dotenv": "^7.0.0",
		"fuzzy-matching": "^0.4.3",
		"semver": "^6.0.0"
	}
}
