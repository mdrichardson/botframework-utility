{
	"name": "botframework-utility",
	"displayName": "BotFramework Utility",
	"description": "Helper utilities to assist in a more efficient bot development life cycle",
	"repository": {
		"type": "git",
		"url": "https://github.com/mdrichardson/botframework-utility"
	},
	"publisher": "mdrichardson",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/*.bot",
		"workspaceContains:**/appsettings.json",
		"workspaceContains:**/.env"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.openEmulatorLocalhost",
				"category": "Bot > Emulator",
				"title": "Open Emulator (localhost)"
			},
			{
				"command": "extension.createAppRegistration",
				"category": "Bot > Deploy",
				"title": "1. Create App Registration"
			},
			{
				"command": "extension.deploymentCreateResourcesNewResourceGroup",
				"category": "Bot > Deploy",
				"title": "2A. Create AZ Resources (new Res. Group)"
			},
			{
				"command": "extension.deploymentCreateResourcesExistingResourceGroupExistingServicePlan",
				"category": "Bot > Deploy",
				"title": "2B. Create AZ Resources (existing Res. Group/existing Service Plan)"
			},
			{
				"command": "extension.deploymentCreateResourcesExistingResourceGroupNewServicePlan",
				"category": "Bot > Deploy",
				"title": "2C. Create AZ Resources (existing Res. Group/new Service Plan)"
			},
			{
				"command": "extension.deploymentPublish",
				"category": "Bot > Deploy",
				"title": "3. Deploy/Publish"
			},
			{
				"command": "extension.currentTest",
				"category": "Bot > DEV",
				"title": "Run Current Test"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceFilename =~ /(.env|appsettings.json)/i",
					"command": "extension.openEmulatorLocalhost",
					"group": "@botframework-utility"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Botframework Utility",
			"properties": {
				"botframework-utility.customTerminalForAzCommands": {
					"type": "string",
					"description": "Path to custom terminal for AZ CLI commands"
				}
			}
		},
		"keybindings": [
			{
				"command": "extension.openEmulatorLocalhost",
				"key": "ctrl+alt+shift+e",
				"mac": "cmd+alt+shift+e",
				"when": "debugType != xyz"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "webpack --mode none",
		"watch": "webpack --mode none --watch",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test",
		"test-compile": "tsc --sourceMap -p ./ && npm run compile",
        "lint": "eslint ./src --ext .ts",
        "package": "vsce package"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^2.2.48",
		"@types/node": "^10.14.6",
		"@typescript-eslint/eslint-plugin": "^1.7.0",
		"@typescript-eslint/parser": "^1.7.0",
		"decache": "^4.5.1",
		"eslint": "^5.16.0",
		"eslint-config-standard": "^12.0.0",
		"eslint-plugin-import": "^2.17.2",
		"eslint-plugin-node": "^8.0.1",
		"eslint-plugin-promise": "^4.1.1",
		"eslint-plugin-standard": "^4.0.0",
		"glob": "^7.1.4",
		"istanbul": "^0.4.5",
		"mocha": "^6.1.4",
		"randexp": "^0.5.3",
		"remap-istanbul": "^0.13.0",
		"ts-loader": "^5.4.4",
		"tslint": "^5.16.0",
		"typescript": "^3.4.5",
		"vscode": "^1.1.34",
		"webpack": "^4.30.0",
		"webpack-cli": "^3.3.2"
	},
	"dependencies": {
		"archiver": "^3.0.0",
		"axios": "^0.18.0",
		"dotenv": "^7.0.0",
		"fuzzy-matching": "^0.4.3"
	}
}
