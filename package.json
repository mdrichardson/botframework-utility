{
	"name": "botframework-utility",
	"displayName": "BotFramework Utility",
	"description": "Helper utilities to assist in a more efficient bot development life cycle",
	"publisher": "mdrichardson",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/*.bot",
		"workspaceContains:**/appsettings.json",
		"workspaceContains:**/.env"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.openEmulatorLocalhost",
				"title": "BotFramework: Open Emulator (localhost)"
			},
			{
				"command": "extension.deploymentCreateResourceGroup",
				"title": "BotFramework: Deployment > 1. Create Resource Group"
			},
			{
				"command": "extension.deploymentCreateWebApp",
				"title": "BotFramework: Deployment > 2. Create Web App"
			},
			{
				"command": "extension.deploymentPublish",
				"title": "BotFramework: Deployment > 3. Publish"
			},
			{
				"command": "extension.currentTest",
				"title": "BotFramework: Run Current Test"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceFilename =~ /(.env|appsettings.json)/i",
					"command": "extension.openEmulatorLocalhost",
					"group": "@botframework-utility"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.33"
	},
	"dependencies": {
		"dotenv": "^7.0.0",
		"fuzzy-matching": "^0.4.3",
		"zip-a-folder": "0.0.7"
	}
}
