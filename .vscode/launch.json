{
	"version": "0.2.0",
	"configurations": [{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
                "C:\\Users\\v-micric\\Documents\\Code\\VS Code Extension\\botframework-utility\\test folder",
                "--disable-extension",
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		},
		{
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "C:\\Users\\v-micric\\Documents\\Code\\VS Code Extension\\botframework-utility\\testEnvironment",
                "--disable-extension",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/test"
            ],
            "outFiles": ["${workspaceFolder}/out/test/**/*test.js"],
            "preLaunchTask": "npm: test-compile"
          }
	]
}
